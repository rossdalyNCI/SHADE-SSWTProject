<p id="notice"><%= notice %></p>

<h1>Items</h1>


 
    <% @items.each do |item| %>
      <div class="link row clearfix">
        <h1><%= item.title %></h1>
        
        <%= link_to (image_tag item.image_url, :class=>"itemholsIm"), item %>
        
        <p><%= item.description %>
        
        </p>
        
        <p><%= item.price %>
        <br>
        <%= item.category %>
        <br>
        <%= item.brand %>
        </p>
        
        <div class="btn-group">
        <a href="/cart/<%= item.id %>" class="btn btn-primary">Add to Cart</a>
        <%= link_to 'Show', item, class: "btn btn-default" %>
        
        <% if user_signed_in? %>
        <%= link_to 'Edit', edit_item_path(item), class: "btn btn-default" %>
        <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
         <% end %>
         
         
     
     </div>
     </div>
    <% end %>
  

<br>


</div>